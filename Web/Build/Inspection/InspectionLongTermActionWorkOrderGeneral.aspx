                                &nbsp;
                                <div style="position: relative; width: 15px">
                                    <eluc:TabStrip ID="MenuLongTermAction" runat="server" OnTabStripCommand="MenuLongTermAction_TabStripCommand">
                                    </eluc:TabStrip>
                                </div>
                                <div id="divGrid" style="position: relative; z-index: +1">
                                    <asp:GridView ID="gvLongTermAction" runat="server" AllowSorting="true" AutoGenerateColumns="False"
                                        CellPadding="3" DataKeyNames="FLDINSPECTIONPREVENTIVEACTIONID" EnableViewState="false"
                                        Font-Size="11px" OnRowCancelingEdit="gvLongTermAction_RowCancelingEdit" OnRowCommand="gvLongTermAction_RowCommand"
                                        OnRowDataBound="gvLongTermAction_ItemDataBound" OnRowEditing="gvLongTermAction_RowEditing"
                                        OnSelectedIndexChanging="gvLongTermAction_SelectedIndexChanging" OnSorting="gvLongTermAction_Sorting"
                                        ShowFooter="false" ShowHeader="true" Width="100%">
                                        <FooterStyle CssClass="datagrid_footerstyle" />
                                        <HeaderStyle CssClass="DataGrid-HeaderStyle" />
                                        <AlternatingRowStyle CssClass="datagrid_alternatingstyle" />
                                        <SelectedRowStyle CssClass="datagrid_selectedstyle" />
                                        <RowStyle Height="10px" />
                                        <Columns>
                                            <asp:TemplateField>
                                                <HeaderTemplate>
                                                    <asp:CheckBox ID="chkAllRemittance" runat="server" AutoPostBack="true" OnPreRender="CheckAll"
