                                                <asp:LinkButton ID="cmdPrevious" runat="server" CommandName="prev" OnCommand="PagerButtonClick">Prev &lt;&lt; </asp:LinkButton>
                                            </td>
                                            <td width="20px">
                                                &nbsp;
                                            </td>
                                            <td align="right" nowrap width="50px">
                                                <asp:LinkButton ID="cmdNext" runat="server" CommandName="next" OnCommand="PagerButtonClick">Next &gt;&gt;</asp:LinkButton>
                                            </td>
                                            <td align="center" nowrap>
                                                <asp:TextBox ID="txtnopage" runat="server" CssClass="input" MaxLength="3" Width="20px"> </asp:TextBox>
                                                <asp:Button ID="btnGo" runat="server" CssClass="input" OnClick="cmdGo_Click" Text="Go"
