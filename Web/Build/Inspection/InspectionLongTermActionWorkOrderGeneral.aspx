                                    ReadOnly="true"> </asp:TextBox>
                            </td>
                        </tr>                      
                        <tr>
                            <td width="15%">
                               <asp:Literal ID="lblWODescription" runat="server" Text="WO Description"></asp:Literal>
                            </td>
                            <td width="35%">
                                <asp:TextBox ID="txtDescription" runat="server" CssClass="input" Height="70px" TextMode="MultiLine"
